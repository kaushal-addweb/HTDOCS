Default
create table student(id bigint(10) primary key, name varchar(50) not null, address varchar(50) default 'India', mobile bigint(10) unique);

create table student1(id bigint(10) auto_increment primary key, name varchar(50) not null, address varchar(50) default 'India', mobile bigint(10) unique);

Insert into student1(name,address, mobile,email) values('Nidhi',7410852963,'nidhi@gmail.com');



